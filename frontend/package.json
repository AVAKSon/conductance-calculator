{
  "name": "vacuum-conductance-app",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "build": {
    "appId": "com.yourcompany.vacuumcalculator",
    "productName": "Vacuum Conductance Calculator",
    "files": [
      "**/*",
      "../backend/dist/app.exe"
    ],
    "extraResources": [
      {
        "from": "../backend/dist/app.exe",
        "to": "app.exe"
      }
    ],
    "win": {
      "target": "portable",
      "icon": "icon.ico"
    }
  },
  "devDependencies": {
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12"
  }
}
